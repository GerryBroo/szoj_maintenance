<%- include('header', {pagetitle: 'Maintenance - Create Issue'}) -%>

<main class="container">
  <form>
    <h1 class="p-1">
      Create Issue
    </h1>
    <div class="mb-3">
      <label for="issue_name" class="form-label fw-bold">Name</label>
      <input type="text" class="form-control" id="issue_name" aria-describedby="issue_name_help">
      <div id="issue_name_help" class="form-text">Name of the Issue</div>
    </div>
    <div class="mb-3">
      <label for="machine_name_issue" class="form-label fw-bold">Machine</label>
      <input type="text" class="form-control" id="machine_name_issue">
    </div>
    <div class="mb-3">
      <label for="error_message" class="form-label fw-bold">Error Message</label>
      <input type="text" class="form-control" id="error_message">
    </div>
    <div class="mb-3">
      <label for="comment" class="form-label fw-bold">Comment</label>
      <input type="text" class="form-control" id="comment">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-danger" href="/issue">Cancel</a>
  </form>
</main>

<%- include('footer') -%>
