<%- include('header', {pagetitle: 'Maintenance - Edit Issue'}) -%>

<main class="container">
    <form>
        <h1 class="p-1">
            Edit Issue
        </h1>

        <div class="mb-3">
            <p class="fw-bold">Name</p>
            <div class="border-bottom">Forrasztó pálca túlmelegedés</div>
        </div>
        <div class="mb-3">
            <p class="fw-bold">Machine</p>
            <div class="border-bottom">Forrasztó állomás</div>
        </div>
        <div class="mb-3">
            <p class="fw-bold">Error Message</p>
            <div class="border-bottom">Túlmelegedés</div>
        </div>
        <div class="mb-3">
            <label class="fw-bold" for="selectStatus">Status</label>
            <select class="form-control" id="selectStatus">
                <option>Waiting for repair</option>
                <option>Repairing</option>
                <option>Done</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="fw-bold" for="comment_textarea">Comment</label>
            <textarea class="form-control" id="comment_textarea" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-danger" href="/issue">Cancel</a>
    </form>
</main>

<%- include('footer') -%>
